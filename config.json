{
  "root": {
    "src": "./web/dev",
    "dest": "./web/dist",
    "node_modules": "./node_modules"
  },

  "enabledTasks": {
    "asset": ["fonts", "iconFont", "images", "svgSprite"],
    "code": ["sass", "js"]
  },

  "sourcemaps": {
    "dest": "../maps"
  },

  "rev": {
    "assetsIgnore": [],
    "extensions": ["css"],
    "manifestDest": "./.."
  },

  "tasks": {
    "browserSync": {
      "open": "external",
      "host": "www.objectif-barreau.local",
      "proxy": "www.objectif-barreau.local/app_dev.php",
      "port": "3000",
      "reloadDelay": 2000,
      "notify": {
        "styles": {
          "top": "auto",
          "bottom": "0"
        }
      }
    },

    "static": {
      "src": "static",
      "dest": "static"
    },

    "js": {
      "src": "js",
      "dest": "js",
      "concat": "app.js",
      "babel": {
        "presets": ["es2015", "stage-1"],
        "plugins": []
      },
      "lint": "gulpfile.js/.eslintrc.json",
      "extensions": ["js"]
    },

    "sass": {
      "src": "scss",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version", "ie >= 9"]
      },
      "options": {
        "indentedSyntax": false,
        "includePaths": ["web/bundles"]
      },
      "extensions": ["scss", "css"]
    },

    "less": {
      "src": "less",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version", "ie >= 9"]
      },
      "options": {
        "paths": [],
        "plugins": []
      },
      "extensions": ["less", "css"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif", "ico"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "icons",
      "dest": "images",
      "extensions": ["svg"]
    }
  }
}
